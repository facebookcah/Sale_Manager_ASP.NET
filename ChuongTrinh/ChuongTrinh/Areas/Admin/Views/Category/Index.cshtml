@model IEnumerable<ChuongTrinh.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card mb-4 mt-5">
    <div class="card-header">
        <svg class="svg-inline--fa fa-table fa-w-16 me-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg><!-- <i class="fas fa-table me-1"></i> Font Awesome fontawesome.com -->
        Danh mục
    </div>
    <div class="card-body">
        <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
            <div class="dataTable-top"></div><div class="dataTable-container">
                <a href="@Url.Action("Create","Category")" style="color:green;margin-bottom:10px;font-size:40px;"><i class="fas fa-plus-square"></i></a><br /><br />
                <table id="datatablesSimple" class="dataTable-table">
                        <tr class="bg-success text-white">
                            <th>Mã DM</th>
                            <th>Tên DM</th>
                            <th>Thao tác</th>
                        </tr> 
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td onclick="location.href='@Url.Action("Details", "Category", new {id=item.MaDanhMuc})'" style="cursor:pointer">@item.MaDanhMuc</td>
                                <td onclick="location.href='@Url.Action("Details", "Category", new {id=item.MaDanhMuc})'" style="cursor:pointer">@item.TenDanhMuc</td>
                                <td>
                                    <a href="@Url.Action("Details", "Category", new {id=item.MaDanhMuc})" style="margin-right: 10px; color:mediumseagreen"><i class="fas fa-eye"></i></a>

                                    <a href="@Url.Action("Edit", "Category", new {id=item.MaDanhMuc})" style="margin-right:10px;"><i class="fas fa-edit"></i></a>

                                    <a href="@Url.Action("Delete", "Category", new {id=item.MaDanhMuc})" style="color:#ff4949;"><i class="fas fa-trash"></i></a>

                                </td>
                            </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>


