@model ChuongTrinh.Models.DanhMuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác nhận xóa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal col-md-12">
    <h6 style="color:gray;">Danh mục</h6>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.MaDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.MaDanhMuc, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>
    <input name="MaDM" value="@Model.MaDanhMuc" hidden />

    <div class="col-md-2">
        <input type="submit" value="Xóa" class="btn btn-outline-danger mt-2" />
        <a class="btn btn-outline-warning mt-2" href="@Url.Action("Index","Category")">Trở về</a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class=" col-md-12 mt-4" >
            <span class="alert alert-danger">@ViewBag.Error</span>
        </div>
    }
</div>
}

