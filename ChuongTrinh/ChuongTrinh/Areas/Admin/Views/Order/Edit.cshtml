@model ChuongTrinh.Models.HoaDon
@using System.Collections.Generic; 
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cập nhật</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input  value="@Model.MaHD" name="MaHD" hidden/>
    <input  value="@Model.MaKH" name="MaKH" hidden/>
    <input  value="@Model.NgayLap" name="NgayLap" hidden/>
    <input  value="@Model.GhiChu" name="GhiChu" hidden/>
    <div class="form-horizontal">
        <h6 style="color:gray;">Hóa đơn</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaHD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control", @disabled = "@disabled" } })
                @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaKH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-control", @disabled = "@disabled" })
                @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayLap, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control", @disabled = "@disabled" } })
                @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                <textarea class="form-control" cols="200" disabled>@Model.GhiChu</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @{
                    IDictionary<int, string> status = new Dictionary<int, string>();
                    status.Add(1, "Đã thanh toán");
                    status.Add(2, "Chưa thanh toán");
                    status.Add(3, "Đã hủy");
                    status.Add(4, "Đang giao");
                    <select name="TinhTrang" class="form-control">
                        @foreach (var i in status)
                        {


                            if (i.Key == @Model.TinhTrang)
                            {
                                <option value="@i.Key" class="form-control">@i.Value</option>
                            }
                            else
                            {
                                <option value="@i.Key" class="form-control">@i.Value</option>
                            }

                        }
                    </select>
                }
            </div>
        </div>

        <div class="col-md-2">
            <input type="submit" value="Cập nhật" class="btn btn-outline-success mt-2" />
            <a class="btn btn-outline-warning mt-2" href="@Url.Action("Index","Order")">Trở về</a>
        </div>
    </div>
}


