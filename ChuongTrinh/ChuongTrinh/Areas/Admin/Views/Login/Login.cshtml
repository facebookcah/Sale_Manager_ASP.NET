@model ChuongTrinh.Models.Account
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<style>
    body {
        margin: 0;
        padding: 0;
        background-image: url(https://images5.alphacoders.com/386/thumb-1920-386700.jpg);
        height: 100%;
    }
    #login .container #login-row #login-column #login-box {
        margin-top: 30%;
        max-width: 600px;
        height: 320px;
        border-radius: 15px 50px;
        opacity:0.94;
       background-color: #EAEAEA;

    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>
<body>
    <div id="login">
@*        <h3 class="text-center text-white pt-5">TRANG QUẢN TRỊ</h3>
*@        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
            <h3 class="text-center text-info">Đăng nhập trang quản trị</h3> if (ViewBag.Message != null)
                            {
            <p style="color:red;">@ViewBag.Message</p> }
                    <div class="form-group">
                        <label for="username" class="text-info">Tên đăng nhập</label><br>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control form-style",@placeholder="Tên đăng nhập" } })

                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label for="password" class="text-info">Mật khẩu</label><br>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-style", @placeholder = "Mật khẩu",@type="password" } })

                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    </div>
                            <div class="form-group">
                                <input style="width:100%" type="submit" name="submit" class="btn btn-success btn-md" value="Đăng nhập">
                                <label for="remember-me" class="text-info"><input id="remember-me" name="remember-me" type="checkbox"><span> Ghi nhớ</span> <span></span></label><br>
                            </div>
                                                            <div id="register-link" class="text-right">

                                                            </div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

