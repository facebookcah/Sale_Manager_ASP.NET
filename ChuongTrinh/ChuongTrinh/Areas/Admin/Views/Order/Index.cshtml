@model IEnumerable<ChuongTrinh.Models.HoaDon>
@using System.Collections.Generic;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card mb-4 mt-5">
    <div class="card-header">
        <svg class="svg-inline--fa fa-table fa-w-16 me-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg><!-- <i class="fas fa-table me-1"></i> Font Awesome fontawesome.com -->
        Đơn hàng
    </div>
    <div class="card-body">
        <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
            <div class="dataTable-top"></div><div class="dataTable-container">
                <table id="datatablesSimple" class="dataTable-table">
                        <tr class="bg-success text-white">
                            <th>Mã HD</th>
                            <th>Mã KH</th>
                            <th>Ngày lập</th>
                            <th>Tình trạng</th>
                            <th>Thao tác</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td onclick="location.href='@Url.Action("Details", "Order", new {id=item.MaHD})'" style="cursor:pointer">@item.MaHD</td>
                                <td onclick="location.href='@Url.Action("Details", "Order", new {id=item.MaHD})'" style="cursor:pointer">@item.MaKH</td>
                                <td onclick="location.href='@Url.Action("Details", "Order", new {id=item.MaHD})'" style="cursor:pointer">@item.NgayLap</td>
                                <td>
                                    @{
                                        IDictionary<int, string> status = new Dictionary<int, string>();
                                        status.Add(1, "Đã thanh toán");
                                        status.Add(2, "Chưa thanh toán");
                                        status.Add(3, "Đã hủy");
                                        status.Add(4, "Đang giao");
                                        foreach (var i in status)
                                        {
                                            if (item.TinhTrang == i.Key)
                                            {

                                                @i.Value

                                            }
                                        }
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Order", new {id=item.MaHD})" style="margin-right:10px;color:mediumseagreen"><i class="fas fa-eye"></i></a>

                                    <a href="@Url.Action("Edit", "Order", new {id=item.MaHD})" style="margin-right:10px;"><i class="fas fa-edit"></i></a>


                                </td>
                            </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>


