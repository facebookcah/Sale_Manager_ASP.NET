@model ChuongTrinh.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác nhận xóa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal col-md-12">
    <h6 style="color:gray;">Tài khoản</h6>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.MaTK, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.MaTK, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.MaTK, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MaKH, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Quyen.TenQuyen, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md">
            @Html.EditorFor(model => model.Quyen.TenQuyen, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Quyen.TenQuyen, "", new { @class = "text-danger" })
        </div>
    </div>
    <input name="MaDM" value="@Model.MaTK" hidden />

    <div class="col-md-2">
        <input type="submit" value="Xóa" class="btn btn-outline-danger mt-2" />
        <a class="btn btn-outline-warning mt-2" href="@Url.Action("Index","Account")">Trở về</a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class=" col-md-12 mt-4">
            <span class="alert alert-danger">@ViewBag.Error</span>
        </div>
    }
</div>
}

