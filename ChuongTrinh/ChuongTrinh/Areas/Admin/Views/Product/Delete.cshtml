@model ChuongTrinh.Models.SanPham
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using System.Globalization;


@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2> Xoá</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <h4>Sản phẩm</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.DanhMuc.TenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md">
            @Html.EditorFor(model => model.DanhMuc.TenDanhMuc, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenSP, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md">
            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.KhoiLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @Html.EditorFor(model => model.KhoiLuong, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaBan, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md">
                @{
                    var price = Model.GiaBan.ToString("C0", CultureInfo.CurrentCulture).Substring(1);
                }
                <input value="@price" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <dt>
            <img src="~/wwwroot/Client/images/products/@Model.HinhAnh" width="200" height="200" />
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HinhAnh)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-outline-success mt-2" />
            <a class="btn btn-outline-warning mt-2" href="@Url.Action("Index","Product")">Trở về</a>
        </div>
    }
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}