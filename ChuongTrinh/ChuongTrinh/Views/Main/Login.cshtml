@model ChuongTrinh.Models.Account
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/wwwroot/Client/login/images/icons/favicon.ico" />
    
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/wwwroot/Client/login/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #666666;>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                @using (Html.BeginForm("Login", "Main", FormMethod.Post, htmlAttributes: new { @class = "login100-form validate-form" }))
                {

                    <span class="login100-form-title p-b-43">
                        Đăng nhập
                    </span>
                    if (ViewBag.Error != null)
                    {
                        <p style="color:red; text-align:center;margin-bottom:10px;">@ViewBag.Error</p>
                    }

            <div class="wrap-input100 validate-input" data-validate="User name không được để trống">
                
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-style input100" } })

                <span class="focus-input100"></span>
                <span class="label-input100">Tên đăng nhập</span>
            </div>


                    <div class="wrap-input100 validate-input" data-validate="Mật khẩu không được để trống">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-style input100",@type="password" } })

                        <span class="focus-input100"></span>
                        <span class="label-input100">Mật khẩu</span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">

                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Ghi nhớ
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Quên mật khẩu?
                            </a>
                        </div>
                    </div>


                    <div class="container-login100-form-btn">

                        <input value="Đăng nhập" class="login100-form-btn" type="submit" style="text-align:center;" />
                    </div>
                    <br />
                    <p style="text-align:center;">Bạn chưa có tài khoản? <a href="@Url.Action("Register","Main")" style="color:aqua;">Đăng kí</a></p>


                }

                <div class="login100-more" style="background-image: url('https://idp.vn/kun/wp-content/uploads/sites/3/2016/01/kun-story-fighting-lt.jpg'); ">

                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/wwwroot/Client/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/wwwroot/Client/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/wwwroot/Client/login/js/main.js"></script>

</body>
</html>
